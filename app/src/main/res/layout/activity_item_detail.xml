<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hubspot.auctionapp.ItemDetailActivity">

    <LinearLayout
        android:id="@+id/bid_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="1.0">

        <Button
            android:id="@+id/button_bid_low"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:text="$10"/>

        <Button
            android:id="@+id/button_bid_mid"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:text="$25"/>
        <Button
            android:id="@+id/button_bid_high"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:text="$50"/>
        <Button
            android:id="@+id/button_bid_custom"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:text="custom"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_bids"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bid_form"
        tools:listitem="@layout/item_bid" />

</RelativeLayout>